<Window x:Class="EntityPrakt1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityPrakt1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock  Grid.ColumnSpan="3" Grid.Row="1" Text="Добро пожаловать в Зоомагазин!" HorizontalAlignment="Center" FontWeight="Medium" FontSize="35"/>
        <Button Grid.Row="3" Grid.Column="1" Content="Клиенты" FontSize="20" Background="Khaki" Click="click1"/>
        <Button Grid.Row="5" Grid.Column="1" FontSize="20" Content="Питомцы" Background="LemonChiffon" Click="click2"/>
        <Button Grid.Row="7" Grid.Column="1" FontSize="20" Content="Заказы" Background="Honeydew" Click="click3"/>
    </Grid>
</Window>
